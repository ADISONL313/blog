<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqcskj.blog.mapper.BlogLikeMapper">
    <resultMap id="BlogLikeResultMap" type="java.util.Map">
        <id property="likeId" column="like_id" />
        <result property="mail" column="mail" />
        <result property="blogId" column="blog_id" />
        <result property="likeTime" column="like_time" />
        <result property="title" column="title" />
    </resultMap>

    <!-- 查询方法 -->
    <select id="getBlogLikesMapper" resultMap="BlogLikeResultMap">
        SELECT
        bl.*,
        b.title as title
        FROM
        blog_like bl
        LEFT JOIN
        blog b ON bl.blog_id = b.blog_id
        <where>
            <if test="mail != null and mail != ''">
                AND bl.mail = #{mail}
            </if>
            <if test="blogId != null">
                AND bl.blog_id = #{blogId}
            </if>
        </where>
    </select>
</mapper>